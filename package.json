{
  "name": "copilot50",
  "displayName": "Copilot50",
  "description": "Provide code explanations for learners",
  "icon": "images/copilot50.png",
  "version": "0.0.1",
  "publisher": "CS50",
  "preview": true,
  "repository": "https://github.com/cs50/copilot50.vsix",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Education",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
        {
            "title": "Copilot50: Set API Key",
            "command": "copilot50.setApiKey"
        },
        {
            "title": "Copilot50: Remove API Key",
            "command": "copilot50.unsetApiKey"
        },
        {
            "title": "Explain highlighted code",
            "command": "copilot50.codeAnalysis"
        }
    ],
    "menus": {
        "editor/context": [
            {
                "command": "copilot50.codeAnalysis",
                "when": "editorTextFocus",
                "group": "0_workspace@0"
            }
        ]
    },
    "keybindings": [
        {
            "command": "copilot50.codeAnalysis",
            "win": "alt+shift+e",
            "key": "alt+shift+e",
            "mac": "alt+shift+e",
            "when": "editorTextFocus"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "markdown-it": "^13.0.1",
    "markdown-it-highlightjs": "^4.0.1"
  }
}
